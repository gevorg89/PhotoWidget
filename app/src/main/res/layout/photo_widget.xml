<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.PhotoWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@style/Theme.PhotoWidget.AppWidgetContainer">

    <ImageView
        android:id="@+id/appwidget_img"
        style="@style/Widget.PhotoWidget.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/appwidget_text"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_baseline_qr_code_24" />

    <Button
        android:id="@+id/appwidget_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Добавить"
        android:visibility="gone"
        tools:ignore="HardcodedText"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/appwidget_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:indeterminateTintMode="src_in"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>