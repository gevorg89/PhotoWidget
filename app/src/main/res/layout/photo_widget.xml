<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.PhotoWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@style/Theme.PhotoWidget.AppWidgetContainer">

    <ImageView
        android:id="@+id/appwidget_img"
        android:scaleType="centerInside"
        style="@style/Widget.PhotoWidget.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/appwidget_text"
        tools:src="@drawable/ic_baseline_qr_code_24" />
</RelativeLayout>